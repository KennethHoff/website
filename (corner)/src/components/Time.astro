---
import type { HTMLAttributes } from "astro/types";

type Props = Omit<HTMLAttributes<"a">, "datetime"> & {
    datetime: Date;
};

const { datetime, ...rest } = Astro.props;

const dateTimeFormat = new Intl.DateTimeFormat("no-NB", {
    dateStyle: "full",
});
---

<time {...rest} datetime={datetime.toUTCString()}>{dateTimeFormat.format(Astro.props.datetime)}</time>
